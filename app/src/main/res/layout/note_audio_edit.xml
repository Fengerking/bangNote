<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary">

    <com.wyhwl.bangnote.noteAudioRecStatus
        android:id="@+id/viewRecStatus"
        android:layout_width="92dp"
        android:layout_height="match_parent">
    </com.wyhwl.bangnote.noteAudioRecStatus>

    <ImageButton
        android:id="@+id/btnAudioStop"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_stop"/>

    <ImageButton
        android:id="@+id/btnAudioStart"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"
        android:background="@drawable/note_audio_start"/>

    <ImageButton
        android:id="@+id/btnAudioPlay"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_play"/>

    <ImageButton
        android:id="@+id/btnAudioDelete"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="4dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_cancel"/>

</LinearLayout>