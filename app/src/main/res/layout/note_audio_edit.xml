<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.wyhwl.bangnote.noteAudioRecStatus
        android:id="@+id/viewRecStatus"
        android:layout_width="132dp"
        android:layout_height="match_parent">
    </com.wyhwl.bangnote.noteAudioRecStatus>

    <ImageButton
        android:id="@+id/btnAudioStop"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_stop"/>

    <ImageButton
        android:id="@+id/btnAudioStart"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="16dp"
        android:background="@drawable/note_audio_start"/>

    <ImageButton
        android:id="@+id/btnAudioPlay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_play"/>

    <ImageButton
        android:id="@+id/btnAudioDelete"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_cancel"/>

</LinearLayout>