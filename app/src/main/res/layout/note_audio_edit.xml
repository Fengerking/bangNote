<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/btnAudioStart"
        android:layout_width="62dp"
        android:layout_height="62dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="8dp"
        android:background="@drawable/note_audio_start"/>

    <ImageButton
        android:id="@+id/btnAudioPause"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_pause"/>

    <ImageButton
        android:id="@+id/btnAudioStop"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="8dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_stop"/>


    <ImageButton
        android:id="@+id/btnAudioPlay"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_play"/>

    <ImageButton
        android:id="@+id/btnAudioDelete"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:layout_marginLeft="16dp"
        android:layout_gravity="center_vertical"
        android:background="@drawable/note_audio_cancel"/>

</LinearLayout>