<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/layParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/txtOldType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="旧的类型名："/>
        <EditText
            android:id="@+id/edtOldType"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:textSize="16dp"
            android:textColor="@color/colorBlack"
            android:layout_toRightOf="@id/txtOldType"/>

        <TextView
            android:id="@+id/txtNewType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:textSize="18dp"
            android:layout_below="@id/txtOldType"
            android:text="新的类型名："/>
        <EditText
            android:id="@+id/edtNewType"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="45dp"
            android:textColor="@color/colorBlack"
            android:textSize="16dp"
            android:layout_toRightOf="@id/txtNewType"/>

    </RelativeLayout>

</LinearLayout>